---
export interface Props {
    title: string;
    description: string;
    showMoreBtn: boolean;
}

const {
	title, description, showMoreBtn
} = Astro.props;
---



<div class="card lg:card-side bg-base-100 shadow-xl">
  <div class="card-body">
    <h2 class="card-title">{ title }</h2>
    <p>{ description }</p>
    <div class="card-actions justify-end">
      { showMoreBtn && <button class="btn btn-primary"><a href={"#"} class={"decoration-inherit text-inherit"}>Read More...</a></button> }
    </div>
  </div>
</div>